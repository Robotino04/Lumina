---
Checks:
  [
    "-*",
    "clang-analyzer-*",

    "cppcoreguidelines-*",
    "-cppcoreguidelines-avoid-magic-numbers",
    "-cppcoreguidelines-special-member-functions",
    "-cppcoreguidelines-non-private-member-variables-in-classes",
    "-cppcoreguidelines-narrowing-conversions",
    "-cppcoreguidelines-pro-type-union-access",
    "-cppcoreguidelines-pro-type-vararg",
    "-cppcoreguidelines-prefer-member-initializer",

    "readability-*",
    "-readability-magic-numbers",
    "-readability-convert-member-functions-to-static",
    "-readability-identifier-length",
    "-readability-uppercase-literal-suffix",

    "bugprone-*",
    "-bugprone-narrowing-conversions",
    "-bugprone-easily-swappable-parameters",

    "concurrency-*",

    "misc-*",
    "-misc-non-private-member-variables-in-classes",
    "-misc-unused-parameters",

    "modernize-*",
    "-modernize-use-trailing-return-type",
    "-modernize-use-nodiscard",

    "performance-*",

    "portability-*",
  ]
CheckOptions:
  readability-identifier-naming.NamespaceCase: "CamelCase"

  readability-identifier-naming.ClassCase: "CamelCase"
  readability-identifier-naming.EnumCase: "CamelCase"
  readability-identifier-naming.ConceptCase: "CamelCase"
  readability-identifier-naming.TypeAliasCase: "CamelCase"
  readability-identifier-naming.TypedefCase: "CamelCase"
  readability-identifier-naming.UnionCase: "CamelCase"
  readability-identifier-length.StructCase: "CamelCase"

  readability-identifier-naming.FunctionCase: "CamelCase"
  #readability-identifier-naming.ClassMethodCase: "CamelCase"

  readability-identifier-naming.ParameterCase: "camelBack"
  readability-identifier-naming.VariableCase: "camelBack"
  readability-identifier-naming.MemberCase: "camelBack"
  readability-identifier-naming.LocalVariableCase: "camelBack"

  readability-identifier-naming.GlobalConstantCase: "CamelCase"
  readability-identifier-naming.GlobalConstantPrefix: "k"
  readability-identifier-naming.LocalConstantCase: "camelBack"
  readability-identifier-naming.ConstantMemberCase: "camelBack"
  readability-identifier-naming.EnumConstantCase: "CamelCase"
  readability-identifier-naming.EnumConstantPrefix: "k"
  readability-identifier-naming.ScopedEnumConstantCase: "CamelCase"

  readability-identifier-naming.TemplateParameterCase: "CamelCase"
  readability-identifier-naming.ValueTemplateParameterCase: "CamelCase"
  readability-identifier-naming.ValueTemplateParameterPrefix: "k"

  readability-identifier-naming.MacroDefinitionCase: "UPPER_CASE"

  readability-braces-around-statements.ShortStatementLines: 1

#lower_case
#UPPER_CASE
#camelBack
#CamelCase
#camel_Snake_Back
#Camel_Snake_Case
#aNy_CasE
#Leading_upper_snake_case

FormatStyle: "file"
